<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.LostieFragment">

    <!--    Views for scan feature  -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Button.Circle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/findLostItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="20dp"
        android:text="@string/lostDeviceText"
        app:icon="@drawable/ic_search"
        app:iconGravity="start"
        app:layout_constraintEnd_toEndOf="@id/scanButton"
        app:layout_constraintStart_toStartOf="@id/scanButton"
        app:layout_constraintTop_toBottomOf="@id/scanButton" />



</androidx.constraintlayout.widget.ConstraintLayout>